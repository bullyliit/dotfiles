xrdb  ~/.Xresource

urxvt --help 2>&1| sed -n '/: /s/^ */! URxvt*gp' >> ~/.Xresources

! --True Transparency for DEs
! URxvt*.depth: 32
! URxvt*.background: [85]#202020

! -- Transparency for i3wm
URxvt.inherentPixmap: true
URxvt.transparent: true
URxvt.shading: 10

! --scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt*scrollstyle: plain
URxvt*scrollBar: false

! --Perl
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URXvt*colorUL: #A0A0A0

! Background color
URxvt*background: #202020

! --Font face
!URxvt*font: xft:dejavu sans mono:size=8:antialias=true
!URxvt*boldFont: xft:dejavu sans mono:bold:size=8:antialias=true
URxvt*font: xft:terminus :size=8:antialias=true
URxvt*boldFont: xft:terminus :bold:size=8:antialias=true
URxvt*letterSpace: 1

! --Font color
URxvt*foreground: #a1a1a1
URxvt*colorBD: #B5Bd68
URxvt*colorIT: #B294BB

